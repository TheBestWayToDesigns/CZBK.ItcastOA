        //把允许查看共享的模板用户id存到隐藏空间里（共享用）
        function addModelstr() {
            var str = "";
            var MFID = $("#ModelFInput").combobox("getValue");
            var reg = /^[\d+,]{1,}$/
            if (reg.test(MFID)) {
                var a = $("#STUstrID").val();
                var ay = a.split(",");
                var my = MFID.split(",");
                for (var j = 0; j < my.length; j++){
                    for (var i = 0; i < ay.length; i++) {
                        while (ay[i] == my[j]) {
                            delete my[j];
                            continue;
                        }
                    }
                }
                str = str + a + MFID;
                $.messager.alert("提示", "添加人员成功！");
                $("#STUstrID").val(str);
            } else {
                $.messager.alert("提示","请选择模板！");
            }
        }


