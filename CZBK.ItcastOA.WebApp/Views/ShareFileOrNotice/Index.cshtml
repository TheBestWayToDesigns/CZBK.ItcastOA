                        field: 'FileURL', title: '文件下载', align: 'center',
                        formatter: function (value, row, index) {
                            return "<a href='javascript:downloadFile()' class='l-btn' style='margin:0px 5px;padding:2px 8px '>下载</a>";
                        }
                    },
