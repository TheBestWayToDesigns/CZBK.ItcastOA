        //下载共享文件
        function downloadFile() {
            var row = $('#tt').datagrid('getSelected');
            $.post("/ShareFileOrNotice/GetFileUrl", { "id": row.ID }, function (data) {
                if(data.ret == "null"||data.ret == null){
                    $.messager.alert("提示", "无文件，可能未上传文件！");
                }
                else{
                    var url = data.ret;
                    window.open(url);
                }
            })
        }

