                    { field: 'ck', checkbox: true, title: '', width: 30 },
                    { field: 'ID', title: '编号', align: 'center' },
                    { field: 'TypeID', title: '共享类型', align: 'center' },
                    { field: 'FileTypeID', title: '文件类型', align: 'center' },
                    { field: 'BeiZhu', title: '文件备注', align: 'center' },
